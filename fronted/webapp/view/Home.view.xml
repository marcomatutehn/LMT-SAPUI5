<mvc:View
	controllerName="sap.ui.demo.nav.controller.Home"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml"
	class="viewPadding">
	<Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding sapUiPageHeaderBackground">
	<headerContent>		
		<Button
			icon="sap-icon://hello-world"				
			press=".onOpenDialog"/> 
		<Button
			icon="sap-icon://hello-world"			
			press=".onOpenDialog"/> 
		<Button
			icon="sap-icon://hello-world"				
			press=".onOpenDialog"/> 
		<Button
			icon="sap-icon://hello-world"				
			press=".onOpenDialog"/> 
		<Button
			icon="sap-icon://hello-world"			
			press=".onOpenDialog"/> 
	</headerContent>
	<l:VerticalLayout>
			<l:content>
			<FlexBox
				height="auto"
				alignItems="Start"
				justifyContent="Start">
				<items>
					<GenericTile 
						class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom tileLayout" 
						header="Create New Account" 
						press="onNavToEmployees">
						<TileContent footer="SAP">
							<ImageContent src="sap-icon://home-share" />
						</TileContent>
					</GenericTile>

					<GenericTile 
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
							header="Account History"
							press="onNavToEmployeeOverview">
							<TileContent  footer="SAP">
								<ImageContent src="sap-icon://home-share" />
							</TileContent>
					</GenericTile>

				</items>
			</FlexBox>
			<FlexBox
				height="auto"
				alignItems="Center"
				justifyContent="Start">
				<items>

					<GenericTile 
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
							header="Account Info"
							press="onNavInfoPage">
							<TileContent footer="Current Quarter">
								<ImageContent src="sap-icon://home-share" />
							</TileContent>
					</GenericTile>

				</items>
			</FlexBox>
			</l:content>
		</l:VerticalLayout>
	
		
	</Page>
</mvc:View>
