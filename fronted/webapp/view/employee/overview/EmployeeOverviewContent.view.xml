<mvc:View
	controllerName="sap.ui.demo.nav.controller.employee.overview.EmployeeOverviewContent"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Table id="employeesTable"
		items="{/Employees}"
		itemPress=".onItemPressed">
		<headerToolbar>
			<Toolbar>	
				<ToolbarSpacer />
				<!--Remember center content -->
				<SearchField id="searchField" search=".onSearchEmployeesTable" width="50%"  />
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column id="employeeIDCol"><Text text="{i18n>Type}"/></Column>
			<Column id="firstNameCol" demandPopin="true"><Text text="{i18n>Date}"/></Column>
			<Column id="lastNameCol" demandPopin="true"><Text text="{i18n>Time}"/></Column>
		</columns>
		<items>
			<ColumnListItem type="Active">
				<cells>
					<!--Change Binding -->
					<Text text="{EmployeeID}"/>
					<Text text="{FirstName}"/>
					<Text text="{LastName}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>
